#!/usr/bin/env python

import os

from yoda import Config, Output, Subcommands
from yoda.subcommand import Workspace

yoda_config = Config("%s/.yodarc" % os.environ.get("HOME"))
out = Output()

subcmd = Subcommands(yoda_config)
subcmd.add_command(Workspace())
subcmd.parse()

args = subcmd.parser.parse_args()
try:
    subcmd.execute(args)
except Exception as e:
    out.error(e.message)
